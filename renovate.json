{
  "extends": ["config:base", "schedule:weekly"],
  "labels": ["dependencies"],
  "reviewers": ["team:@UNDataForum/code-reviewers"],
  "rebaseWhen": "never",
  "semanticCommits": false,
  "packageRules": [
    {
      "sourceUrlPrefixes": ["https://github.com/undataforum/design-system"],
      "groupName": "undataforum/design-system packages"
    },
    {
      "sourceUrlPrefixes": ["https://github.com/undataforum/gatsby-themes"],
      "groupName": "undataforum/gatsby-themes packages"
    },
    {
      "packagePatterns": ["@changesets"],
      "groupName": "atlassian/changesets packages"
    }
  ]
}

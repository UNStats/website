{
  "private": true,
  "workspaces": [
    "site",
    "gatsby-theme-2020"
  ],
  "scripts": {
    "start": "yarn workspace site run develop",
    "build": "rm -rf public && yarn workspace site run build && mv site/public/ public",
    "clean": "yarn workspace site run clean",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "6.7.0",
    "eslint-plugin-shopify": "33.0.0",
    "husky": "3.1.0",
    "lint-staged": "9.4.3",
    "now": "16.6.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1"
  }
}

{
  "private": true,
  "name": "@undataforum/main-website",
  "description": "United Nations World Data Forum main website.",
  "version": "0.0.0",
  "author": "Thilo Maier <maier@un.org>",
  "homepage": "https://undataforum.org",
  "license": "MIT",
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "clean": "gatsby clean",
    "inspect": "node --inspect-brk node_modules/.bin/gatsby develop",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "purge": "rm -rf ./node_modules"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "dependencies": {
    "@undataforum/components": "^0.39.4",
    "@undataforum/gatsby-theme-blog": "^0.2.1",
    "@undataforum/tokens": "^0.3.4",
    "gatsby": "^2.0.0-beta.61",
    "gatsby-source-filesystem": "^2.0.37",
    "prop-types": "^15.7.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-plugin-shopify": "^30.0.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "now": "^16.1.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  }
}
